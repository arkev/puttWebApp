extends ../layout

block content
  h2 Nuevo disco
  form(action='/discs/new' method='post' enctype='multipart/form-data')
    div
      label(for='brand') Marca:
      input(type='text' name='brand' id='brand' required)
    div
      label(for='model') Modelo:
      input(type='text' name='model' id='model' required)
    div
      label(for='plastic') Plástico:
      input(type='text' name='plastic' id='plastic')
    div
      label(for='weight') Peso (g):
      input(type='number' name='weight' id='weight')
    div
      label(for='color') Color:
      input(type='text' name='color' id='color')
    div
      label(for='flight') Números de vuelo:
      input(type='text' name='flight' id='flight')
    div
      label(for='image') Imagen:
      input(type='file' name='image' id='image' accept='image/*')
    div
      button(type='submit') Guardar
